<xs:element name="color">
	<xs:simpleType>
		<xs:restriction base="xs:string">
			<xs:enumeration value="fondorojo"/>
			<xs:enumeration value="fondoverde"/>
			<xs:enumeration value="fondoazul"/>
		</xs:restriction>
	</xs:simpleType>
</xs:element>

<xs:element name="nombre">
	<xs:simpleType>
		<xs:restriction base="xs:string">
			<xs:minLength value="1"/>
			<xs:maxLength value="12"/>
		</xs:restriction>
	</xs:simpleType>
</xs:element>

<xs:element name="numAplic">
	<xs:simpleType>
		<xs:restriction base="xs:positiveInteger">
			<xs:minInclusive value="00000001"/>
			<xs:maxInclusive value="99999999"/>
		</xs:restriction>
	</xs:simpleType>
</xs:element>

<xs:element name="tam">
	<xs:simpleType>
		<xs:restriction base="xs:positiveInteger">
			<xs:minInclusive value="1"/>
			<xs:maxInclusive value="100"/>
		</xs:restriction>
	</xs:simpleType>
</xs:element>